  <div class = "deletecontainer">
  <div class="delete">
    <%= form_tag({controller:"tweets",action:"destroy"}, method: :delete) do %>
      <%= number_field_tag :key, @word, placeholder: "削除キー(半角数字4桁)" %>
    <%= submit_tag '削除する', class: 'btn btn-danger'  %>
    <% end %>

  </div></div>
  <br><br>
