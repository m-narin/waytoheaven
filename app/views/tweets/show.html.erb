<div id="zangeshowcontainer">
<header class="header-nav">
  <div class="indextitle">
  <a href="/zenkoutweets/"><img src="/images/angel.png" width="50px" height="50px"></a>
  </div>
    <nav><a href="/about">About</a></nav>
    <nav><a href="/hells">Hells</a></nav>
    <nav><a href="/heaven">Heaven</a></nav>
    <nav><a href="/links">Links</a></nav>
  
</header>
<div class="heart">
  <img src="/images/heart.png" width="20px" height="20px">
</div>

    <% if flash[:likecreate] %>
      <script>
        alert('あなたの赦しでその人は救われるでしょう')
      </script>
    <% end %>

    <% if flash[:likenotice] %>
      <script>
        alert('すでに赦しています')
      </script>
    <% end %>

    <% if flash[:notice] %>
      <script>
        alert('削除キーが違います')
      </script>
    <% end %>

    <% if flash[:commentcreate] %>
      <script>
        alert('あなたの言葉でその人は救われるでしょう')
      </script>
    <% end %>

